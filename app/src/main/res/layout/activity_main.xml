<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#050c19">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        tools:ignore="ContentDescription,MissingConstraints"
        />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_button"
        app:backgroundTint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        tools:ignore="ContentDescription,MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/background"
        android:layout_marginTop="56dp"
        android:alpha="0.28"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/back_button"
        android:src="@drawable/baseline_arrow_back_white_20"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="@+id/back_button"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        android:backgroundTint="@android:color/transparent"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/info_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_button"
        app:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        tools:ignore="ContentDescription,MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/background"
        android:layout_marginTop="56dp"
        android:alpha="0.28"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/info_button"
        android:src="@drawable/baseline_more_horiz_white_24"
        app:layout_constraintTop_toTopOf="@+id/info_button"
        app:layout_constraintEnd_toEndOf="@+id/info_button"
        app:layout_constraintBottom_toBottomOf="@+id/info_button"
        android:backgroundTint="@android:color/transparent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-22dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dota"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:text="DoTA 2"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/Logo"
        app:layout_constraintTop_toBottomOf="@+id/background"
        android:layout_marginTop="12dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/Star1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/dota"
        app:layout_constraintLeft_toRightOf="@id/Logo"
        android:layout_marginTop="7dp"
        android:layout_marginStart="12dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/dota"
        app:layout_constraintLeft_toRightOf="@id/Star1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="4dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/dota"
        app:layout_constraintLeft_toRightOf="@id/Star2"
        android:layout_marginTop="7dp"
        android:layout_marginStart="4dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/dota"
        app:layout_constraintLeft_toRightOf="@id/Star3"
        android:layout_marginTop="7dp"
        android:layout_marginStart="4dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star5"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/dota"
        app:layout_constraintLeft_toRightOf="@id/Star4"
        android:layout_marginTop="7dp"
        android:layout_marginStart="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Star5"
        android:text="70лю"
        app:layout_constraintTop_toTopOf="@id/Star5"
        app:layout_constraintBottom_toBottomOf="@id/Star5"
        app:layout_constraintTop_toBottomOf="@id/dota"
        android:layout_marginStart="10dp"
        android:textColor="#45454D"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMoba"
        android:layout_width="53dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/Logo"
        app:layout_constraintTop_toBottomOf="@id/Logo"
        android:layout_marginTop="23dp"
        app:cornerRadius="10dp"
        android:backgroundTint="#44A9F4"
        android:alpha="0.24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#44A9F4"
        android:text="MOBA"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/buttonMoba"
        app:layout_constraintBottom_toBottomOf="@id/buttonMoba"
        app:layout_constraintRight_toRightOf="@id/buttonMoba"
        app:layout_constraintLeft_toLeftOf="@id/buttonMoba"
        android:fontFamily="sans-serif-light"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMulti"
        android:layout_width="93dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/buttonMoba"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/Logo"
        android:layout_marginTop="23dp"
        app:cornerRadius="10dp"
        android:backgroundTint="#44A9F4"
        android:alpha="0.24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#44A9F4"
        android:text="MULTIPLAYER"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/buttonMulti"
        app:layout_constraintBottom_toBottomOf="@id/buttonMulti"
        app:layout_constraintRight_toRightOf="@id/buttonMulti"
        app:layout_constraintLeft_toLeftOf="@id/buttonMulti"
        android:fontFamily="sans-serif-light"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStrategy"
        android:layout_width="73dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/buttonMulti"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/Logo"
        android:layout_marginTop="23dp"
        app:cornerRadius="10dp"
        android:backgroundTint="#44A9F4"
        android:alpha="0.24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#44A9F4"
        android:text="STRATEGY"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/buttonStrategy"
        app:layout_constraintBottom_toBottomOf="@id/buttonStrategy"
        app:layout_constraintRight_toRightOf="@id/buttonStrategy"
        app:layout_constraintLeft_toLeftOf="@id/buttonStrategy"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha="0.7"
        android:text="@string/Description"
        android:textColor="#EEF2FB"
        app:layout_constraintEnd_toEndOf="@+id/background"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@id/buttonMulti"
        />

    <TextView
        android:id="@+id/ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review &amp; Ratings"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#EEF2FB"
        app:layout_constraintLeft_toLeftOf="@id/Description"
        app:layout_constraintTop_toBottomOf="@id/Description"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.9"
        app:layout_constraintLeft_toLeftOf="@id/Description"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>
    <ImageView
        android:id="@+id/Star6"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintLeft_toRightOf="@id/score"
        android:layout_marginTop="29dp"
        android:layout_marginStart="16dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star7"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintLeft_toRightOf="@id/Star6"
        android:layout_marginTop="29dp"
        android:layout_marginStart="4dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star8"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintLeft_toRightOf="@id/Star7"
        android:layout_marginTop="29dp"
        android:layout_marginStart="4dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star9"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintLeft_toRightOf="@id/Star8"
        android:layout_marginTop="29dp"
        android:layout_marginStart="4dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/Star10"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star_png"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintLeft_toRightOf="@id/Star9"
        android:layout_marginTop="29dp"
        android:layout_marginStart="4dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70M Reviews"
        app:layout_constraintTop_toBottomOf="@id/Star10"
        app:layout_constraintLeft_toRightOf="@id/score"
        android:textColor="#A8ADB7"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />

    <ImageView
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/border"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/score"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        tools:ignore="ContentDescription" />

    <androidx.cardview.widget.CardView
        app:layout_constraintBottom_toBottomOf="@id/user1_data"
        app:layout_constraintTop_toTopOf="@id/user1_name"
        app:layout_constraintLeft_toLeftOf="@id/score"
        android:id="@+id/user1_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="818dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user1_photo"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/border"
        android:layout_marginTop="8dp"
        android:text="Auguste Conte"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/user1_photo"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/user1_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user1_name"
        android:text="February 14, 2019"
        android:textColor="@color/white"
        android:alpha="0.4"
        app:layout_constraintLeft_toLeftOf="@id/user1_name"/>
    <TextView
        android:id="@+id/user1_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user1_feedback"
        android:textColor="#A8ADB7"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/user1_photo"
        android:layout_marginTop="18dp"
        />
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="@id/user2_name"
        app:layout_constraintBottom_toBottomOf="@id/user2_data"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/score"
        android:id="@+id/user2_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="818dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/user2_photo"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/user2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user1_feedback"
        android:layout_marginTop="8dp"
        android:text="Jang Marcelino"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/user2_photo"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/user2_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user2_name"
        android:text="February 14, 2019"
        android:textColor="@color/white"
        android:alpha="0.4"
        app:layout_constraintLeft_toLeftOf="@id/user2_name"/>
    <TextView
        android:id="@+id/user2_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user2_feedback"
        android:textColor="#A8ADB7"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/user2_photo"
        android:layout_marginTop="18dp"
        android:paddingBottom="150dp"
        />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="327dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="64dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Install"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:backgroundTint="#f4d144"
        app:cornerRadius="10dp"
        android:textStyle="bold"
        />



</androidx.constraintlayout.widget.ConstraintLayout>